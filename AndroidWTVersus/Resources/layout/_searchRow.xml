<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffd54f"
    android:id="@+id/relativeViewRow"
    android:padding="6dp">

    <ImageView
        android:src="@drawable/USA"
        android:layout_width="54dp"
        android:layout_height="37dp"
        android:id="@+id/imageViewRow"
        android:adjustViewBounds="true"
        android:layout_marginRight="6dp"
 />
    <TextView
        android:text="Spitfire Mk. IX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameViewRow"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@+id/imageViewRow"
        android:textSize="17dp"
        android:paddingBottom="7dp" 
/>
        <TextView
        android:text="Fighter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rankViewRow"
        android:textColor="@android:color/black"
        android:textSize="12dp" 
        android:layout_toRightOf="@+id/imageViewRow"
        android:layout_below="@+id/nameViewRow"
        />
    <TextView
        android:text="BR: 5.3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/brViewRow"
        android:textColor="@android:color/black"
        android:textSize="12dp" 
        android:layout_toRightOf="@+id/imageViewRow"
                android:layout_below="@+id/nameViewRow"
                android:gravity="center"

        />
    <TextView
        android:text="15000 s.l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/repairViewRow"
        android:textColor="@android:color/black"
        android:textSize="12dp" 
        android:layout_toRightOf="@+id/imageViewRow"
        android:layout_below="@+id/nameViewRow"
        android:gravity="right"
        />


</RelativeLayout>