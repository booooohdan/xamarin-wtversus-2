<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="37sp"
    android:id="@+id/topMenuContainer"
    android:background="@color/colorPrimary">
    <Button
        android:id="@+id/topMenuAircraftsButton"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="25"
        android:text="@string/aircrafts"
        style="@style/TopMenuBottons"/>
    <Button
        android:id="@+id/topMenuTanksButton"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="25"
        android:text="@string/tanks"
        style="@style/TopMenuBottons"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/ButtonAsTabShape" />
    <Button
        android:id="@+id/topMenuHeliButton"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="25"
        android:text="@string/helis"
        style="@style/TopMenuBottons" />
    <Button
        android:id="@+id/topMenuShipsButton"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="25"
        android:text="@string/ships"
        style="@style/TopMenuBottons" />
</LinearLayout>