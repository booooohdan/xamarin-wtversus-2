<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimary</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="TopMenuBottons" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="BlackTextView" parent="@android:style/TextAppearance.Small">
    <item name="android:textColor">@android:color/black</item>
    <item name="android:gravity">center</item>
    <item name="android:paddingTop">1dp</item>
    <item name="android:paddingBottom">1dp</item>
  </style>

  <style name="RedLabelTextView" parent="@android:style/TextAppearance.Small">
    <item name="android:textColor">#ffffffff</item>
    <item name="android:gravity">center</item>
    <item name="android:background">@drawable/LabelWithRoundedTopCorner</item>

  </style>

  

  

</resources>
